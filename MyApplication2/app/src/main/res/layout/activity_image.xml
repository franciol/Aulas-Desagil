<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frana.myapplication.ImageActivity">


    <ViewAnimator
    android:id="@+id/viewAnimator"
    android:layout_width="351dp"
    android:layout_height="382dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintVertical_bias="0.159">

</ViewAnimator>
    <Button
        android:id="@+id/returnMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:textStyle="bold"
        android:layout_marginLeft="181dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/viewAnimator"
        app:layout_constraintHorizontal_bias="0.813"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/viewAnimator" />

    <Button
        android:id="@+id/changeIm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mudar"
        app:layout_constraintTop_toTopOf="@+id/returnMain"
        app:layout_constraintRight_toLeftOf="@+id/returnMain"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/viewAnimator" />
    />
</android.support.constraint.ConstraintLayout>
