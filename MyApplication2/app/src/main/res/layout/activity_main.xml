<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frana.myapplication.MainActivity">

    <TextView
        android:id="@+id/contador"
        android:layout_width="91dp"
        android:layout_height="34dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:text="Contador!!!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="56dp"
        android:text="Menos(-)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="42dp"
        android:layout_marginTop="56dp"
        android:text="Mais(+)"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="110dp"
        android:text="Zerar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contador" />

    <Button
        android:id="@+id/bonus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="157dp"
        android:text="BONUS!!!"
        android:onClick="goToActivity2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/zerar"
        app:layout_constraintRight_toRightOf="@+id/zerar"
        app:layout_constraintTop_toBottomOf="@+id/zerar" />

    <Button
        android:id="@+id/gotoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="301dp"
        android:text="Imagem"
        app:layout_constraintBottom_toBottomOf="@+id/bonus"
        app:layout_constraintLeft_toLeftOf="@+id/mais"
        app:layout_constraintTop_toBottomOf="@+id/mais"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/camera_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="Camera"
        app:layout_constraintRight_toRightOf="@+id/menos"
        app:layout_constraintTop_toTopOf="@+id/gotoImage" />

    <Button
        android:id="@+id/gotoSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="SMS"
        app:layout_constraintBottom_toTopOf="@+id/bonus"
        app:layout_constraintLeft_toRightOf="@+id/camera_bt"
        app:layout_constraintRight_toLeftOf="@+id/gotoImage"
        app:layout_constraintTop_toBottomOf="@+id/zerar" />

    <Button
        android:id="@+id/gotoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/gotoSMS"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/zerar"
        app:layout_constraintTop_toBottomOf="@+id/menos"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>
